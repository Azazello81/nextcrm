{
  "name": "nextcrm",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "db:init": "tsx scripts/init-db.ts",
    "test:phone": "tsx scripts/test-phone-validation.ts",
    "docker:dev": "docker-compose --env-file .env up",
    "docker:dev:build": "docker-compose --env-file .env build",
    "docker:dev:down": "docker-compose --env-file .env down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml --env-file .env.production up",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml --env-file .env.production build",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml --env-file .env.production down",
    "docker:clean": "docker system prune -f",
    "postinstall": "prisma generate",
    "cleanup:stats": "tsx scripts/cleanup-stats.ts",
    "cleanup:sessions": "tsx scripts/cleanup-sessions.ts",
    "cleanup:daily": "npm run cleanup:sessions",
    "cleanup:stats:docker": "docker compose exec nextcrm npm run cleanup:stats",
    "cleanup:sessions:docker": "docker compose exec nextcrm npm run cleanup:sessions",
    "cleanup:daily:docker": "docker compose exec nextcrm npm run cleanup:daily",
    "cleanup:all:docker": "docker compose exec nextcrm npm run cleanup:stats && docker compose exec nextcrm npm run cleanup:sessions"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.5",
    "@mui/material": "^7.3.5",
    "@mui/x-data-grid": "^8.18.0",
    "@prisma/client": "6.2.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.23.25",
    "react-number-format": "^5.4.0",
    "react-input-mask": "^3.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "next": "^16.0.7",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "prisma": "6.2.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-server-dom-turbopack": "^19.2.1",
    "recharts": "^3.4.1",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "20.19.25",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-input-mask": "^3.0.4",
    "@types/uuid": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
